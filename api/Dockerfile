FROM ruby:3.2.2-alpine AS builder
RUN apk add \
build-base \
postgresql-dev
COPY Gemfile* .
RUN bundle install
FROM ruby:3.2.2-alpine AS runner
RUN apk add \
    tzdata \
    postgresql-dev \
    nano
WORKDIR /app
COPY --from=builder /usr/local/bundle/ /usr/local/bundle/
COPY . .
EXPOSE 4000
CMD ["rails", "server", "-b", "0.0.0.0", "-p", "4000"]
